<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_background"
    tools:context=".MainLogin">

    <!-- Título principal -->
    <TextView
        android:id="@+id/textUsuario2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#111112"
    android:padding="16dp"
    android:text="Menu"
    android:textColor="#FFFFFF"
    android:textSize="18sp"
    android:gravity="center"
    android:elevation="4dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />
    <!-- Botón Pallets -->
    <!-- Botón Embarque -->
    <!-- Botón Retorno -->

    <Button
        android:id="@+id/btnEnvio"
        android:layout_width="336dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#3D6783"
        android:drawableStart="@drawable/icons8_caja_de_tenencia_50"
        android:padding="16dp"
        android:text="Receiving"
        android:textColor="#E3E5E6"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textUsuario2" />

    <Button
        android:id="@+id/btnEmbarque"
        android:layout_width="336dp"
        android:layout_height="68dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#C9E4F3"
        android:drawableStart="@drawable/camioncarga"
        android:padding="16dp"
        android:text="Shipping"
        android:textColor="#2C3E50"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEnvio" />


    <Button
        android:id="@+id/btnRetorno"
        android:layout_width="336dp"
        android:layout_height="74dp"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="#3D6783"
        android:drawableStart="@drawable/icons8_cajas_30"
        android:padding="16dp"
        android:text="Daily Inventory"
        android:textColor="#E3E5E6"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEmbarque" />
    <!-- Botón Recibo -->


    <!-- Logo -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/logo_logintns"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón Cerrar -->
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="44dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/cerrarr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
