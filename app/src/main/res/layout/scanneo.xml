<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#DCF5FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Part Number -->

        <!-- Contenedor de datos -->
        <TextView
            android:id="@+id/tvPartNo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:gravity="center"
            android:padding="16dp"
            android:text="Part No: XXXXX"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="#FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Qty -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="QTY:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvQty1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XXXXX"
                        android:paddingEnd="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvQty2"
                        android:layout_width="55dp"
                        android:layout_height="wrap_content"
                        android:paddingStart="8dp"
                        android:text="YYYYY" />
                </LinearLayout>

                <!-- Repetir estructura para otros campos -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STD_PACK:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStdPack1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CONTAINER:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvContainer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MFG SHIP:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvMFGSHIP1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETD TDC:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvEtdTdc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ETD DCSC:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvEtdCsc1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MFG PLANT:"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvMfgPlant1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AAAA"
                        android:paddingEnd="8dp"/>


                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Campo de escaneo -->
        <EditText
            android:id="@+id/etScanData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="🔍 Scan here "
            android:padding="14dp"
            android:textColor="#000000"
            android:backgroundTint="#89E68B"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>